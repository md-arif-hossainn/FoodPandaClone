<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/nearPandaMart"
        app:layout_constraintTop_toBottomOf="@+id/becomeProL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/pandaMartCardImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/burger"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/hederPandaMartTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="10dp"
            android:text="Pandamart- Dhanmondi"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/minTV"
            app:layout_constraintStart_toEndOf="@+id/pandaMartCardImage"
            app:layout_constraintTop_toTopOf="@+id/pandaMartCardImage" />

        <TextView
            android:id="@+id/minTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35 mins"
            android:gravity="center"
            android:textSize="15sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/baseline_access_time"
            app:layout_constraintStart_toEndOf="@+id/pandaMartCardImage"
            app:layout_constraintBottom_toTopOf="@+id/lastTV"
            app:layout_constraintEnd_toStartOf="@+id/freeTV"
            app:layout_constraintTop_toBottomOf="@+id/hederPandaMartTV"
            android:textColor="@color/black"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/freeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free"
            android:drawablePadding="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:drawableStart="@drawable/baseline_speed_24"
            android:gravity="center"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/lastTV"
            app:layout_constraintTop_toBottomOf="@+id/hederPandaMartTV"
            app:layout_constraintStart_toEndOf="@+id/minTV"
            android:textColor="#D70F64"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lastTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/panda_mart_text_shape"
            android:drawableStart="@drawable/baseline_discount_24"
            android:drawablePadding="@dimen/padding"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="Welcome gift: Free delivery"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/pandaMartCardImage"
            app:layout_constraintStart_toEndOf="@+id/pandaMartCardImage"
            app:layout_constraintTop_toBottomOf="@+id/minTV" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>